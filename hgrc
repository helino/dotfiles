[ui]
username = ehelin
ignore = ~/.hgignore
merge = vimdiff

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = -d $output $local $base $other -c "wincmd J"

[extensions]
graphlog =
rebase =
color =
pager =
record =
histedit =
strip =
shelve =
mq =

[diff]
git = 1
showfunc = 1
unified = 8

[alias]
ll = glog
nudge = push --rev .
qip = qimport -P
qc = ! { if [ -n "$(hg status --quiet)" ]; then $HG shelve; fi } && $HG qpop -a && $HG qq $1 && $HG qpush -ea && { if [ -n "$(hg shelve --list)" ]; then $HG unshelve; fi }
qempty = !$HG qrefresh -X $($HG root)
qe = qpush -e
qs = qseries

[pager]
pager = less -FRX
attend = out, outgoing, diff, export, log, ll, help, cat, glog, blame, annotate, qdiff

[color]
ll.rev = yellow
ll.rev_current = green bold
ll.bookmark = green
ll.bookmark_current = green bold
ll.bugid = white none
ll.node = white
ll.node_current = white bold
