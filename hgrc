[ui]
username = ehelin
ignore = ~/.hgignore
merge = vimdiff

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = -d $base $local $output $other -c "wincmd J"

[extensions]
graphlog =
rebase =
color =
pager =
record =
histedit =
strip =
remotebranches = ~/.hg_remotebranches.py

[diff]
git = 1
showfunc = 1
unified = 8

[alias]
ll = glog
nudge = push --rev .
bedit = !$HG histedit "min(ancestors($(hg bookmark | grep \* | cut -d ' ' -f 3)) - ancestors(master))"
webrev = !webrev -Nr .^

[pager]
pager = less -FRX
attend = out, outgoing, diff, export, log, ll, help, cat, glog

[defaults]
update = --check

[bookmarks]
track.current = True

[color]
ll.rev = yellow
ll.rev_current = green bold
ll.bookmark = green
ll.bookmark_current = green bold
ll.bugid = white none
ll.node = white
ll.node_current = white bold
