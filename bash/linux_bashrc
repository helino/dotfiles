# add ~/bin to the path
if [ -d ~/bin ]; then
    export PATH="~/bin:$PATH"
fi

# loading all aliases
if [[ -s "$HOME/.bash_aliases" ]]; then
    source "$HOME/.bash_aliases"
fi

# set the prompt
PS1='\u@\h:\W\$ '

# use vi keybindings
set -o vi

# settings for history
export HISTCONTROL=erasedups
export HISTSIZE=50000
shopt -s histappend

# autocompletion
if [[ -f /etc/bash_completion ]]; then
    . /etc/bash_completion
fi
